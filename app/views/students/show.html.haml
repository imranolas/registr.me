- model_class = Student
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @student.name
%p
  %strong= model_class.human_attribute_name(:active) + ' '
  - if @student.active
    = raw("<span class='input-icon fui-check-inverted'></span>")
  - else
    = raw("<span class='input-icon fui-cross-inverted'></span>")

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), students_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_student_path(@student), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), student_path(@student), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

%ul.nav.nav-tabs#Tabs
  %li.active
    %a{ href: "#classes", 'data-toggle' => "tab" } Classes
  %li
    %a{ href: "#lessons", 'data-toggle' => "tab" } Lessons

/  Tab panes 
.tab-content
  / Home tab
  .tab-pane.fade#lessons
    - model_class = Lesson
    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:id)
          %th= 'Lesson time'
          %th= model_class.human_attribute_name(:teacher_id)
          %th= model_class.human_attribute_name(:room)
      %tbody
        - @student.lessons.each do |lesson|
          %tr
            %td= link_to lesson.id, lesson_path(lesson)
            %td= lesson.date_time.to_datetime.strftime('%d %b %Y, %H:%M%p') if lesson.date_time
            %td= lesson.teacher.name if lesson.teacher
            %td= lesson.room

  .tab-pane.fade.in.active#classes
    - model_class = Klass
    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:id)
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:teacher_id)
          %th= 'Attendance required'
          %th= model_class.human_attribute_name(:lessons)
          %th= model_class.human_attribute_name(:students)
      %tbody
        - @student.klasses.each do |klass|
          %tr
            %td= link_to klass.id, klass_path(klass)
            %td= klass.name
            %td= klass.teacher.name
            %td #{klass.attendance}%
            %td
              %span.badge= klass.lessons.count
            %td
              %span.badge= klass.students.count