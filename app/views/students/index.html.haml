- model_class = Student
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
= form_tag edit_multiple_students_path, method: :put do
  .table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th
          %th= model_class.human_attribute_name(:id)
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:active)
          %th Classes
          %th=t '.actions', :default => t("helpers.actions")
      %tbody
        - @students.each do |student|
          %tr
            %td
              = label_tag nil, class: 'checkbox' do
                = check_box_tag "student_ids[]", student.id, false,  "data-toggle"=> 'checkbox'
            %td= link_to student.id, student_path(student)
            %td= student.name
            %td
              = display_tick(student.active)
            %td
              %span.badge= student.klasses.count
            %td
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_student_path(student), :class => 'btn btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), student_path(student), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
    = submit_tag "Edit Checked", class: 'btn btn-primary'
= link_to t('.new', :default => t("helpers.links.new")), new_student_path, :class => 'btn btn-primary'
