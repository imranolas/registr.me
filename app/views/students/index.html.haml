- model_class = Student
%p
  Download:
  = link_to "CSV", students_path(format: "csv")
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
= form_tag edit_multiple_students_path, method: :put do
  .table-responsive
    %table.table.data
      %thead
        %tr
          %th
            = check_box_tag :select_all, true, false
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:active)
          %th Classes
      %tbody
        - @students.each do |student|
          %tr
            %td
              = check_box_tag "student_ids[]", student.id, false
            %td= link_to student.name, student_path(student)
            %td
              = display_tick(student.active)
            %td= student.klasses.pluck(:name).join(', ')
  = submit_tag "Edit Checked", class: 'btn btn-primary'
= link_to t('.new', :default => t("helpers.links.new")), new_student_path, :class => 'btn btn-primary'

= render partial: 'shared/csv_form', locals: { title: 'Student', path: import_students_path }