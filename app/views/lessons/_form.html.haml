= form_for @lesson do |f|
  - if @lesson.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lesson.errors.count, "error")} prohibited this lesson from being saved:"
      %ul
        - @lesson.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date_time, value: 'Class Time'
    = f.datetime_select :date_time
  .field
    = f.label :teacher_id
    = f.collection_select(:teacher_id, Teacher.all, :id, :name)
  .field
    = f.label :klass
    = f.collection_select(:klass_id, Klass.all, :id, :name)
  .field
    = f.label :room
    = f.text_field :room
  .actions
    = f.submit 'Save'
