%h1 Edit Checked Lessons

= form_tag organisation_update_multiple_lessons_path(@organisation), method: :put do
  - @lessons.each do |lesson|
    = hidden_field_tag "lesson_ids[]", lesson.id
    %h5 #{lesson.date_to_s}, #{lesson.time_to_s}, #{lesson.room}
  = simple_fields_for Lesson.new do |f|

    .field
      = f.association :klass, collection: @organisation.klasses, as: :radio, input_html: { data: {toggle: 'radio'}}, label: 'Classes'

  .actions
    = submit_tag "Update"