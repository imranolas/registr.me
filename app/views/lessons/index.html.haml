- model_class = Lesson
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize


%ul.nav.nav-tabs#Tabs
  %li.active
    %a{ href: "#upcoming", 'data-toggle' => "tab" } Upcoming
  %li
    %a{ href: "#past", 'data-toggle' => "tab" } Past

/  Tab panes 
.tab-content
  / Home tab
  .tab-pane.fade.in.active#upcoming
    = render partial: 'shared/lesson_table', locals: {lessons: @upcoming}
    = link_to t('.new', :default => t("helpers.links.new")), new_lesson_path, :class => 'btn btn-primary'


  .tab-pane.fade#past
    = render partial: 'shared/lesson_table', locals: {lessons: @past}

= render partial: 'shared/csv_form', locals: { title: "Lessons", path: import_lessons_path }