= form_for @klass, url: wizard_path do |f|
  - if @klass.errors.any?
    #error_explanation
      %h2= "#{pluralize(@klass.errors.count, "error")} prohibited this klass from being saved:"
      %ul
        - @klass.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :teacher_id
    = f.number_field :teacher_id
  .field
    = f.label :attendance
    = f.number_field :attendance
  .actions
    = f.submit 'Save'
