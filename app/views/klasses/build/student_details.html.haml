= form_for @klass, url: wizard_path do |f|
  - if @klass.errors.any?
    #error_explanation
      %h2= "#{pluralize(@klass.errors.count, "error")} prohibited this klass from being saved:"
      %ul
        - @klass.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :id
  = f.text_field :student_ids, {class: 'tokenize'}
  = f.fields_for :students do |ff|
    = render 'student_fields', f: ff
  = link_to_add_fields "Add a new student", f, :students
  = f.submit 'Save'