- model_class = Klass
.page-header
  %h1=t '.title', :default => 'class'.pluralize.titleize
%table.table
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:teacher_id)
      %th= 'Attendance required'
      %th= 'Overall Attendance'
      %th= model_class.human_attribute_name(:lessons)
      %th= model_class.human_attribute_name(:students)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @klasses.each do |klass|
      %tr
        %td= link_to klass.id, klass_path(klass)
        %td= klass.name
        %td= klass.teacher.name
        %td #{klass.attendance}%
        %td= klass.overall_attendance
        %td
          %span.badge= klass.lessons.count
        %td
          %span.badge= klass.students.count
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_klass_path(klass), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), klass_path(klass), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to 'Create a class', new_klass_path, :class => 'btn btn-primary'
